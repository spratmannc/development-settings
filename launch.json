    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Angular App in Chrome",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:\\*": "${workspaceFolder}/*"
            }
        }
    ]
}